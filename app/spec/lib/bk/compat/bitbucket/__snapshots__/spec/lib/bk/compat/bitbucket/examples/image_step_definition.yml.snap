---
steps:
- group:
  key: group1
  steps:
  - commands:
    - golangci-lint run -v
    plugins:
    - docker#v5.10.0:
        image: golangci/golangci-lint:v1.31.0
    label: Lint
  - commands:
    - go build src/*
    plugins:
    - docker#v5.10.0:
        image: golang:1.21
    label: Build
  - commands:
    - mkdir test-reports
    - go get -u github.com/jstemmer/go-junit-report
    - go test tests/* -v 2>&1 | go-junit-report > test-reports/report.xml
    plugins:
    - docker#v5.10.0:
        image: golang:1.21
    label: Test
